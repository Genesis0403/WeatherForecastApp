<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemElement"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/cityImage"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
    />
    <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="City Name"
            android:id="@+id/cityName"
            app:layout_constraintStart_toEndOf="@+id/cityImage"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            tools:text="Any useful information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usefulInformation"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cityName"
            app:layout_constraintStart_toEndOf="@+id/cityImage"
            android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_flash_on_black_24dp"
            android:id="@+id/weatherImage"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <TextView
            tools:text="20"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temperatureNumber"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/weatherImage"
            app:layout_constraintStart_toEndOf="@+id/cityImage"
            app:layout_constraintHorizontal_bias="0.9999"
            app:layout_constraintEnd_toStartOf="@+id/temperatureUnits"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginEnd="6dp"
    />
    <TextView
            tools:text="C"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temperatureUnits"
            app:layout_constraintBaseline_toBaselineOf="@+id/temperatureNumber"
            app:layout_constraintStart_toEndOf="@+id/temperatureNumber"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/weatherImage"/>
</androidx.constraintlayout.widget.ConstraintLayout>